<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/logohistory"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="From: "
                android:padding="5dp"
                android:textSize="14dp"
                android:layout_marginTop="2dp"
                android:textColor="#1A237E"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/choosestarttime"
                android:src="@drawable/ic_date"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#000"
                android:id="@+id/starttime"
                android:text="12/12/2018"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="To: "
                android:padding="10dp"
                android:textSize="14dp"
                android:layout_marginTop="2dp"
                android:textColor="#1A237E"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/chooseendtime"
                android:src="@drawable/ic_date"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#000"
                android:id="@+id/endtime"
                android:text="12/12/2018"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:text="License Plates: "
            android:padding="5dp"
            android:textSize="14dp"
            android:layout_marginTop="7dp"
            android:textColor="#1A237E"
            android:textStyle="bold"/>
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtXe"
            android:padding="5dp"
            android:textColor="#000"

            android:text="18D1 28316"
            android:layout_gravity="center_vertical"/>-->

        <Spinner
            android:id="@+id/dropdown_biensoxe"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivfind"
            android:src="@drawable/timkiem"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>


    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:id="@+id/list"/>
</LinearLayout>
